# Routes
# This file defines all application routes
#

# Displays homepage.
GET     /                           controllers.HomeController.display(request: Request)
GET     /search                     controllers.HomeController.search(request: Request)
GET     /count                      controllers.CountController.count
GET     /message                    controllers.AsyncController.message
GET     /videoStatistics/:keyword   controllers.HomeController.videoStatistics(keyword: String)

# Route for displaying tags based on video ID
GET     /tags/:videoId              controllers.HomeController.showTags(videoId: String)

# Route for searching by tag
GET     /searchByTag/:tag           controllers.HomeController.searchByTag(tag: String, request: Request)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(file)
#for channelProfile
GET     /channelProfile/:channelId        controllers.HomeController.showChannelProfile(channelId: String)
