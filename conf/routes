# Routes
# This file defines all application routes
#

# Displays homepage.
GET     /                           controllers.HomeController.display(request: Request)
GET     /search                     controllers.HomeController.search(request: Request)
GET     /count                      controllers.CountController.count
GET     /message                    controllers.AsyncController.message
GET     /videoStatistics/:keyword    controllers.WordCountController.videoStatistics(keyword: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(file)
